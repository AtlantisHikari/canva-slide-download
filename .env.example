# Canva Slide Downloader Environment Variables

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3004/canva-slide-download

# Performance Settings
MAX_CONCURRENT_DOWNLOADS=3
SCREENSHOT_TIMEOUT=30000
PUPPETEER_MEMORY_LIMIT=512

# Browser Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_DISABLE_GPU=true
PUPPETEER_NO_SANDBOX=true

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=200

# File Storage (Optional - for future cloud storage integration)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=canva-downloads

# Redis Configuration (Optional - for production progress tracking)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Database Configuration (Optional - for user management and analytics)
# DATABASE_URL=postgresql://username:password@localhost:5432/canva_downloader
# DATABASE_POOL_SIZE=10

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting (Optional)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_BATCH_DOWNLOAD=true
ENABLE_QUALITY_PRESETS=true
ENABLE_PROGRESS_TRACKING=true
ENABLE_DOWNLOAD_HISTORY=true
MAX_PAGES_PER_DOWNLOAD=50
MAX_FILE_SIZE_MB=100